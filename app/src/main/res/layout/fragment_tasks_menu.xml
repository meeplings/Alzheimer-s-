<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BlankFragment"
    android:id="@+id/tasksMenuFragment"
    android:visibility="visible"
    android:background="@color/Blue18">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fragTable">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Blue4"
                android:id="@+id/fragRow1"
                android:minHeight="20dp"
                android:nestedScrollingEnabled="true" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Blue6"
                android:id="@+id/fragRow2"
                android:minHeight="20dp"/>

        </TableLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/downButton"
        android:src="@drawable/down_arrow"
        android:scaleType="fitXY"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/upButton"
        android:src="@drawable/up_arrow"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/downButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/asksInstructionText"
        android:text="@string/taskInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/colorAccentPurp"
        android:gravity="center_vertical"
        android:minLines="2"
        android:layout_above="@+id/downButton"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/scrollDesc"
        android:id="@+id/textView3"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView"
        android:layout_marginBottom="53dp" />

</RelativeLayout>
