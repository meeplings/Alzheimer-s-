<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BlankFragment"
    android:id="@+id/tasksMenuFragment"
    android:visibility="visible"
    android:background="#5FD4B1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fragTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1FF65"
            android:id="@+id/fragRow1"
            android:minHeight="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDFF8E"
            android:id="@+id/fragRow2"
            android:minHeight="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1FF65"
            android:id="@+id/fragRow3"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDFF8E"

            android:id="@+id/fragRow4"/>
    </TableLayout>

    <TextView
        android:id="@+id/asksInstructionText"
        android:text="@string/taskInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/orangeDark"
        android:layout_below="@+id/fragTable"
        android:layout_centerHorizontal="true"
        android:background="#e5ffff"
        android:gravity="center_vertical" />

</RelativeLayout>
