<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.BlankFragment"
    android:id="@+id/tasksMenuFragment"
    android:visibility="visible"
    android:background="@color/Blue18">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fragTable">

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/asksInstructionText"
        android:text="@string/taskInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/colorAccentPurp"
        android:gravity="center_vertical"
        android:minLines="2"
        android:layout_toRightOf="@+id/scrollView"
        android:layout_toEndOf="@+id/scrollView" />

</RelativeLayout>
